<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imag"
            android:layout_width="150dp"
            android:layout_height="67dp"
            android:layout_gravity="start"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/gavs" />

        <ImageView
            android:id="@+id/imag2"
            android:layout_width="70dp"
            android:layout_height="99dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="start"
            android:layout_marginRight="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/sss" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center_vertical"
        android:text="Umbrella"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@color/textcolor"
        android:textStyle="bold" />

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Employee Id"
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etempid"
            android:layout_weight=".5"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="Employee Name"

        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etempname"
        android:enabled="false"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_marginRight="100dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="100dp"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="From"
                />
            <Button
                android:background="@color/white"
                android:id="@+id/dpfrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Click here" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="To"
                />

            <Button
                android:background="@color/white"
                android:id="@+id/dpto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Click here" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbreceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive"/>

            <RadioButton
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbreturn"
                android:text="Return"/>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatButton
            android:textColor="@color/white"
            app:backgroundTint="@color/buttonColor"

            android:text="Submit"
            android:id="@+id/btnsubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>

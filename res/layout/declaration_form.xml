<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imag"
                    android:layout_width="150dp"
                    android:layout_height="67dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/gavs" />

                <ImageView
                    android:id="@+id/imag2"
                    android:layout_width="70dp"
                    android:layout_height="99dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start"
                    android:layout_marginRight="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/sss" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:textSize="26dp"
                    android:text="8pm Declaration Form" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvempname"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:text="Employee name" />

                <EditText
                    android:id="@+id/etempname"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="0.5"
                    android:enabled="false"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvempid"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:text="Employee id" />

                <EditText
                    android:id="@+id/etempid"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="0.5"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvaddress"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:inputType="textMultiLine"
                    android:text="Address" />

                <EditText
                    android:id="@+id/etaddress"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="0.5"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvcontactno"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:text="Contact number"
                   />

                <EditText
                    android:id="@+id/etcontactno"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="0.5"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvproject"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:text="Department / Project" />

                <EditText
                    android:id="@+id/etproject"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="0.5"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvmode"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="17dp"
                    android:layout_weight="0.5"
                    android:text="Mode of transport" />

                <RadioGroup
                    android:id="@+id/rmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rpublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public transport"
                        android:buttonTint="@color/blue"/>

                    <RadioButton
                        android:id="@+id/rcab"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Office cab"
                        android:buttonTint="@color/blue"/>

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvreachtime"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="65dp"
                    android:layout_weight="0.5"
                    android:text="Reaching time" />

                <TimePicker
                    android:id="@+id/simpleTimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="60dp"

                    android:layout_weight="0.5"
                    android:timePickerMode="spinner"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvreason"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.5"
                    android:text="Reason" />

                <RadioGroup
                    android:id="@+id/rgReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rdeliverables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/blue"
                        android:text="Critical Deliverables" />

                    <RadioButton
                        android:id="@+id/rlateCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/blue"
                        android:text="Late check-in/Different shift" />
                    <RadioButton
                        android:id="@+id/rprjreq"
                        android:layout_width="wrap_content"
                        android:buttonTint="@color/blue"
                        android:layout_height="wrap_content"
                        android:text="Project Requirements" />
                    <RadioButton
                        android:id="@+id/rothers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/blue"
                        android:text="Others (personal)" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center">

                <CheckedTextView

                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                    android:clickable="true"
                    android:checked="false"
                    android:checkMarkTint="@color/blue"
                    android:id="@+id/checkedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkedTextView"
                    android:layout_marginLeft="76dp"
                    android:layout_marginRight="76dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:textColor="@color/white"
                    app:backgroundTint="@color/buttonColor"
                    android:id="@+id/bsubmit"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_marginLeft="150dp"
                    android:layout_marginRight="150dp"
                    android:layout_weight="0.5"
                    android:text="Submit" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>